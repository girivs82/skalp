// Top-level module demonstrating hierarchical instantiation

entity TopModule {
    in sys_clk: clock
    in sys_reset: reset
    in counter_enable: bit
    out counter_out: bit[8]
    out double_count: bit[9]
}

impl TopModule {
    // Instantiate a counter
    instance counter1: Counter {
        clk: sys_clk
        reset: sys_reset
        enable: counter_enable
        count: counter_out
    }

    // Create a signal that's double the counter value
    double_count = counter_out << 1
}