// Simple counter example in SKALP

entity Counter {
    in clk: clock
    in reset: reset
    out count: nat[8]
}

impl Counter {
    signal counter: nat[8] = 0

    on(clk.rise) {
        if (reset) {
            counter <= 0
        } else {
            counter <= counter + 1
        }
    }

    count = counter
}