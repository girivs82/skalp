// Minimal test of CLE tuple usage
entity CLETupleTest {
    in clk: clock,
    in rst: reset,
    in data1: bit[32],
    in data2: bit[32],
    out result: bit[32]
}

impl CLETupleTest {
    signal reg_result: bit[32] = 0

    on(clk.rise) {
        if (rst) {
            reg_result = 0;
        } else {
            // Test tuple destructuring (like in CLE line 229)
            let (a, b) = (data1 + 5, data2[7:0] + 1);
            reg_result = a + b;
        }
    }

    result = reg_result
}
