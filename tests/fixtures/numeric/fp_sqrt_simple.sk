// Test fixture for fp32 sqrt operation
// Tests basic square root computation using FP hardware

// Import fp32 type and fp module to get arithmetic trait implementations
use skalp::numeric::formats::{fp32};
use skalp::numeric::fp::*;  // Import all from fp.sk to get trait implementations
use skalp::numeric::cordic::CordicSqrt;

entity FpSqrtSimple {
    in x: fp32
    out result: fp32
}

impl FpSqrtSimple {
    // Directly instantiate CordicSqrt entity
    signal sqrt_result: fp32
    let sqrt_op = CordicSqrt {
        value: x,
        result: sqrt_result
    }
    result = sqrt_result
}
