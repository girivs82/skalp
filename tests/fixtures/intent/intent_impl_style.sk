// Test impl_style intent for let statements
// Verifies that #[impl_style::parallel] and similar attributes are parsed correctly
// Uses simple expressions to avoid function inlining issues

/// Test impl_style::parallel via attribute
entity TestImplStyleParallel {
    in a: bit[32]
    in b: bit[32]
    out result: bit[32]
}

impl TestImplStyleParallel {
    #[impl_style::parallel]
    let tmp = a + b;
    result = tmp
}

