// Test impl_style intent for let statements using new 'with intent::' syntax
// Verifies that 'with intent::impl_style_*' on expressions is parsed correctly
// Uses simple expressions to avoid function inlining issues

/// Test impl_style_parallel via with intent:: syntax
entity TestImplStyleParallel {
    in a: bit[32]
    in b: bit[32]
    out result: bit[32]
}

impl TestImplStyleParallel {
    let tmp = (a + b) with intent::impl_style_parallel;
    result = tmp
}

